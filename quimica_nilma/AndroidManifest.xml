<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quimica_nilma"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FullscreenTheme" >
        <activity
            android:name="com.example.quimica_nilma.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name="com.example.quimica_nilma.Cardapio"
            android:label="@string/title_activity_cardapio" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.quimica_nilma.MainActivity"
            android:label="@string/title_activity_main" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.quimica_nilma.Instrucoes"
            android:label="@string/title_activity_instrucoes" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
